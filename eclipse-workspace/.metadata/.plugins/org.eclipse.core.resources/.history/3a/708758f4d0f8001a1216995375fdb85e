package AATEST;
public class solution {
	public static void main(String[] args) { 
		double length = 1,width = 2,radius=3,base=4,height=5,depth=6;
		double rectangleArea = rectangleArea(length, width);
		double  rectanglePerimeter=rectanglePerimeter(length,width);
		double circleArea = circleArea(radius);
		double circleCircumference =circleCircumference(radius);
		double rightTriangleArea =rightTriangleArea(base,height);
		double rightTrianglePerimeter =rightTrianglePerimeter(base,height);
		double boxVolume=boxVolume(length,width,depth);
		double boxSurfaceArea=boxSurfaceArea(length,width,depth);
		double sphereVolume=sphereVolume(radius);
		double sphereSurfaceArea=sphereSurfaceArea(radius);
		System.out.println(boxSurfaceArea);
		
	}
	public static double rectangleArea(double length, double width)
	{
		double res=length*width;
		return res;
	}
	public static double  rectanglePerimeter(double length, double width)
	{
		double res=2*(length*width);
		return res;
	}
	public static double circleArea(double radius) 
	{
		double res=(22/7)*radius*radius;
		return res;
	}public static double circleCircumference(double radius) 
	{
		double res=(22/7)*2*radius;
		return res;
	}
	public static double rightTriangleArea(double base, double height) 
	{
		double res=(1/2)*base*height;
		return res;
	}
	public static double rightTrianglePerimeter(double base, double height) 
	{
		double res = Math.sqrt((base*base)+(height*height))+base+height;
		return res;
	}
	public static double boxVolume(double length, double width, double depth) 
	{
		double res = length*width*depth;
		return res;
	}
	public static double boxSurfaceArea(double length,double width,double depth) 
	{
		double res=2*((length*width)+(width*depth)+(depth*length));
		return res;
	}
	public static double sphereVolume(double radius) 
	{
		double res = (4/3)*(22/7)*radius*radius*radius;
		return res;
	}
	public static double sphereSurfaceArea(double radius) 
	{
		double res = (4)*(22/7)*radius*radius;
		return res;
	}

	

}
